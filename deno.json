{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:nuxt dev",
    "build": "deno run -A --node-modules-dir npm:nuxt build",
    "preview": "deno run -A --node-modules-dir npm:nuxt preview",
    "prepare": "deno run -A --node-modules-dir npm:nuxt prepare",
    "lint": "deno run -A --node-modules-dir npm:@biomejs/biome check --write components pages layouts pages app.vue nuxt.config.ts",
    "serve": "deno run --allow-net --allow-read --allow-env ./.output/server/index.mjs"
  },
  "imports": {
    "@pinia/nuxt": "npm:@pinia/nuxt@^0.10.1",
    "html-to-image": "npm:html-to-image@^1.11.13",
    "@biomejs/biome": "npm:@biomejs/biome@1.9.4",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@4.0.9",
    "tailwindcss": "npm:tailwindcss@4.0.9",
    "nuxt": "npm:nuxt@^3.16.0"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "types": ["@nuxt/types", "@nuxtjs/auto-imports"]
  }
}
